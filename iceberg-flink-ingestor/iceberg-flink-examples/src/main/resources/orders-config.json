{
  "table": {
    "name": "orders",
    "namespace": "default",
    "write_mode": "append",
    "schema": [
      {
        "name": "order_id",
        "type": "long",
        "required": true,
        "mapping": "order_id"
      },
      {
        "name": "customer_id",
        "type": "long",
        "required": true,
        "mapping": "customer_id"
      },
      {
        "name": "product_name",
        "type": "string",
        "required": false,
        "mapping": "product_name"
      },
      {
        "name": "quantity",
        "type": "int",
        "required": false,
        "mapping": "quantity"
      },
      {
        "name": "unit_price",
        "type": "double",
        "required": false,
        "mapping": "unit_price"
      },
      {
        "name": "total_amount",
        "type": "double",
        "required": false,
        "mapping": "total_amount"
      },
      {
        "name": "order_status",
        "type": "string",
        "required": false,
        "mapping": "order_status"
      },
      {
        "name": "order_date",
        "type": "timestamp",
        "required": false,
        "mapping": "order_date"
      }
    ]
