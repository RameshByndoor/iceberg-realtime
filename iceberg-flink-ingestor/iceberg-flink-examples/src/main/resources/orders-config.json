  },
  "iceberg": {
    "catalog_uri": "http://iceberg-rest:8181",
    "warehouse": "s3a://warehouse",
    "io_impl": "org.apache.iceberg.aws.s3.S3FileIO"
  },
  "aws": {
    "region": "us-east-1",
    "access_key_id": "admin",
    "secret_access_key": "password",
    "endpoint": "http://minio:9000",
    "path_style_access": true
  }
